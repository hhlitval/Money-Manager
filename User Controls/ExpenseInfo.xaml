<UserControl x:Class="Money_Manager.User_Controls.ExpenseInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Money_Manager.User_Controls"
             mc:Ignorable="d" Name="expenseInfo" Width="150" Height="70">
    <Border>
        <Grid>
            <StackPanel Margin="30 0 0 25" VerticalAlignment="Bottom">
                <TextBlock Text="{Binding Path=Title, ElementName=expenseInfo}" Foreground="#675f8c" FontSize="12" Margin="0 0 0 5" />
                <TextBlock Text="{Binding Path=Amount, ElementName=expenseInfo}" Foreground="#443f5e" FontSize="18" FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
